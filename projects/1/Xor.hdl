/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
 //produces a 1 output when the inputs are different and 0 otherwise
CHIP Xor {
  
    IN a, b;
    OUT out;

    PARTS:
	Not(in=a, out=notA);
	Not(in=b, out=notB);
	And(a=a, b=notB, out=and1);
	And(a=notA, b=b, out=and2);
	Or(a=and1, b=and2, out=out);
}
