/**
 * And gate:
 * if (a and b) out = 1, else out = 0 
 */
CHIP And {
    IN a, b;
    OUT out;

    PARTS:
    // Using NAND to implement AND
    Nand(a=a, b=b, out=nandOut);  // First NAND operation with inputs a and b
    Nand(a=nandOut, b=nandOut, out=out);  // Negate the output of the first NAND
}